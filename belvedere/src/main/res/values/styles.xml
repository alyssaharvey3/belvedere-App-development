<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="_BelvedereDialogListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:minWidth">280dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="BelvedereDialogListView" parent="_BelvedereDialogListView" />


    <style name="_BelvedereDialogListRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="BelvedereDialogListRow" parent="_BelvedereDialogListRow" />


    <style name="_BelvedereListRowIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="BelvedereListRowIcon" parent="_BelvedereListRowIcon" />


    <style name="_BelvedereListRowText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="BelvedereListRowText" parent="_BelvedereListRowText" />

    <color name="image_stream_status_bar_color">#f5f5f5</color>

    <style name="FloatingActionMenuItem">
        <item name="android:layout_width">@dimen/fam_item_size</item>
        <item name="android:layout_height">@dimen/fam_item_size</item>
        <item name="android:layout_margin">@dimen/fam_item_margin</item>
        <item name="android:padding">@dimen/fam_item_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/fam_item_rounded_background</item>
    </style>

    <color name="floating_action_menu_item_background">@android:color/white</color>
    <color name="floating_action_menu_sign_color">@android:color/white</color>
    <color name="floating_action_menu_item_icon_color">#89000000</color>

</resources>